<h3>All Companies</h3>

<% @companies.each do |company| %>
  <ul class=company_<%= company.id %>>
    <%= link_to company.name, company_path(company) %> - <%= company.city %><br>
    <%= link_to "Edit", edit_company_path(company) %>
    <%= link_to "Delete", company_path(company), method: "delete", data: {confirm: "Are you sure? All associated jobs will be deleted also!"} %>
  </ul>
<% end %>

<%= link_to "Add Company", new_company_path %>
