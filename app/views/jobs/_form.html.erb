<%= form_for [@company, @job] do |f| %>
  <%= render partial: "shared/errors", locals: { target: @company } %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.collection_select(:category_id, @categories, :id, :title) %>

  <%= f.submit %>
<% end %>
